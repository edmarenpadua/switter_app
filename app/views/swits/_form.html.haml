= form_for @swit do |f|
  - if @swit.errors.any?
    #error_explanation
      %h2= "#{pluralize(@swit.errors.count, "error")} prohibited this swit from being saved:"
      %ul
        - @swit.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :"Content"
    = f.text_area :content
  .field
    = f.label :"User ID"
    = f.number_field :user_id
  .actions
    = f.submit 'Save'
