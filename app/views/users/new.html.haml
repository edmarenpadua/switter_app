- content_for :index do
	.row.large-7.columns
		%br
		%br
		%br
		%br
		%h2 Life is full of flavors. ;)
	#sign_up.row.large-5.columns
		%h1 Sign Up
		= render 'users/form'

- content_for :header_index do
	= form_for(:session, url: sessions_path) do |f|
		%ul.inline-list.right
			%li
				= f.label :username, "Username"
				= f.text_field :username
			%li
				= f.label :password, "Password"
				= f.password_field :password, class: "small-3 columns"
			%li
				.actions
					= f.submit 'Sign in', class: "button tiny radius center right"

- content_for :logged_in do
	.row
	= render 'layouts/sideBar'
	= render 'layouts/mainFeed'
	= render 'layouts/doorTagsFeed'

- content_for :header_logged_in do
	%ul.inline-list.right
		%li
			-if signed_in?
				= link_to 'Account Settings', edit_user_path(current_user)
		%li
			= link_to "Log out", signout_path, method: "delete"